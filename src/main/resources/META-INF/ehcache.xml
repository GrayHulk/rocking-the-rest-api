<?xml version="1.0" encoding="UTF-8"?>
<ehcache>

	<diskStore path="java.io.tmpdir" />

	<defaultCache maxBytesLocalHeap="150M" eternal="false"
		timeToIdleSeconds="120" timeToLiveSeconds="120" overflowToDisk="true"
		maxElementsOnDisk="10000000" diskPersistent="false"
		diskExpiryThreadIntervalSeconds="120" memoryStoreEvictionPolicy="LRU" />

	<cache name="cache:users" maxBytesLocalHeap="20M"
		maxElementsOnDisk="1000" eternal="false" overflowToDisk="true"
		timeToIdleSeconds="300" timeToLiveSeconds="600"
		memoryStoreEvictionPolicy="LFU" />
	<cache name="cache:user:detail" maxBytesLocalHeap="10M"
		maxElementsOnDisk="1000" eternal="false" overflowToDisk="true"
		timeToIdleSeconds="300" timeToLiveSeconds="600"
		memoryStoreEvictionPolicy="LFU" />
	
	<cache name="cache:communities" maxBytesLocalHeap="20M"
		maxElementsOnDisk="1000" eternal="false" overflowToDisk="true"
		timeToIdleSeconds="300" timeToLiveSeconds="600"
		memoryStoreEvictionPolicy="LFU" />
	<cache name="cache:community:detail" maxBytesLocalHeap="10M"
		maxElementsOnDisk="1000" eternal="false" overflowToDisk="true"
		timeToIdleSeconds="300" timeToLiveSeconds="600"
		memoryStoreEvictionPolicy="LFU" />
	
	<cache name="cache:members" maxBytesLocalHeap="30M"
		maxElementsOnDisk="1000" eternal="false" overflowToDisk="true"
		timeToIdleSeconds="300" timeToLiveSeconds="600"
		memoryStoreEvictionPolicy="LFU" />
	<cache name="cache:member:detail" maxBytesLocalHeap="10M"
		maxElementsOnDisk="1000" eternal="false" overflowToDisk="true"
		timeToIdleSeconds="300" timeToLiveSeconds="600"
		memoryStoreEvictionPolicy="LFU" />

	<cache name="cache:posts" maxBytesLocalHeap="40M"
		maxElementsOnDisk="1000" eternal="false" overflowToDisk="true"
		timeToIdleSeconds="300" timeToLiveSeconds="600"
		memoryStoreEvictionPolicy="LFU" />
	<cache name="cache:post:detail" maxBytesLocalHeap="10M"
		maxElementsOnDisk="1000" eternal="false" overflowToDisk="true"
		timeToIdleSeconds="300" timeToLiveSeconds="600"
		memoryStoreEvictionPolicy="LFU" />
</ehcache>