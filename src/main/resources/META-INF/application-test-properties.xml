<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties version="1.0">
    <comment>Application Test Properties</comment>
	<!-- application properties -->
	<entry key="system.datetime_pattern">yyyy-MM-dd HH:mm</entry>

    <!-- dataSource properties -->
    <entry key="database.class">com.mysql.jdbc.Driver</entry>
    <entry key="database.url">jdbc:mysql://localhost:3306/rocking_the_rest_api</entry>
    <entry key="database.username">rocking</entry>
    <entry key="database.password">thegradle0228</entry>

    <!-- jpa properties -->
    <entry key="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</entry>
    <entry key="hibernate.hbm2ddl.auto">update</entry>
    <entry key="hibernate.show_sql">false</entry>
    <entry key="hibernate.format_sql">true</entry>

	<entry key="redis.cache_expire_second">86400</entry>
    <entry key="redis.host_name">localhost</entry>
    <entry key="redis.port">36379</entry>
    <entry key="redis.password"></entry>
    <entry key="redis.manager.default_expire_time">30</entry>
    <entry key="redis.manager.use_prefix">true</entry>
    <entry key="redis.use_pool">true</entry>
    <entry key="redis.pool_config.max_total">10</entry>
    <entry key="redis.pool_config.max_idle">10</entry>
    <entry key="redis.pool_config.min_idle">10</entry>
    <entry key="redis.pool_config.max_wait">-1</entry>
    
    <entry key="community.manager.nickName">커뮤니티 관리자</entry>
</properties>